function calcularCashback() {
  const perdas =
    Number(aposta.value)
    - Number(ganho.value)
    - Number(recompensas.value)
    - Number(bonus.value)
    - Number(reembolsoAnterior.value)
    - Number(recompensaReembolso.value);

  const perdasFinal = perdas > 0 ? perdas : 0;
  const percentual = Number(nivel.value);
  const cashback = perdasFinal * percentual;

  resultado.innerHTML = `
    <p>
      <b>Perdas calculadas:</b> R$ ${perdasFinal.toFixed(2)}<br>
      <b>Cashback estimado:</b> R$ ${cashback.toFixed(2)}
    </p>
    <p style="font-size:12px;">
      âš ï¸ Valor estimado. O cÃ¡lculo final Ã© realizado automaticamente pelo sistema.
    </p>
  `;
}

