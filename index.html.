/* ================= CASHBACK ================= */
function cashback() {
  tela(`
    <h2>CÃ¡lculo de Cashback</h2>

    <p><b>Aposta real</b><input id="aposta" type="number"></p>
    <p><b>Valor ganho</b><input id="ganho" type="number"></p>
    <p><b>Recompensas reivindicadas / vendidas</b><input id="recompensas" type="number"></p>
